mc = _root.bg;mc001 = _root.bg001;mc002 = _root.bg002;mc003 = _root.bg003;mcWidth = 1584;	mcHeight = 891;	FlashWidth = 1440;	FlashHeight = 810;buttonMode = true;var per = Stage.height/Stage.width;Stage.scaleMode = "noBorder";var stageListener = new Object();stageListener.onResize = function() {bgMcScale();}Stage.addListener(stageListener);function bgMcScale() {	if ( Stage.width*per > Stage.height ) {		mc._width = Stage.width*1.1;		mc._yscale = mc._xscale;	} else {		mc._height = Stage.height*1.1;		mc._xscale = mc._yscale;	}	mcWidth = Stage.width*1.1;	mcHeight = Stage.height*1.1;		FlashWidth = Stage.width;		FlashHeight = Stage.height;}bgMcScale();onMouseMove = function(){	curMX = _root._xmouse; 	curMY = _root._ymouse;	moveX = (mcWidth - FlashWidth)/2;	moveY = (mcHeight - FlashHeight)/2;		if(curMX > FlashWidth/2){ 	x2 = (FlashWidth/2) - (curMX/FlashWidth) * moveX;	}	if(curMX < FlashWidth/2){	x2 = (FlashWidth/2) + ((FlashWidth/2-curMX)/(FlashWidth/2) * moveX);	}	if(curMY > FlashHeight/2 ){	y2 = (FlashHeight/2) - (curMY/FlashHeight) * moveY;	}	if(curMY < FlashHeight/2){	y2 = (FlashHeight/2) + ((FlashHeight/2-curMY)/(FlashHeight/2) * moveY);	}		Tweener.addTween(bg,{_x:x2,_y:y2,time:2.8,transition:'easeOutQuint'});	Tweener.addTween(bg001,{_x:x2,_y:y2,time:1.6,transition:'easeOutQuint'});	Tweener.addTween(bg002,{_x:x2,_y:y2,time:2,transition:'easeOutQuint'});	Tweener.addTween(bg003,{_x:x2,_y:y2,time:2.4,transition:'easeOutQuint'});}